<%- include('../partials/header') %>
<title> YelpCamp </title>
<link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
<!-- Font Awesome icons (free version)-->
<!-- Google fonts-->
<link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet" />
<!-- Core theme CSS (includes Bootstrap)-->
<link href="/stylesheets/index.css" rel="stylesheet" />
<link rel="stylesheet" href="/stylesheets/campgrounds.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"
    async></script>
</head>
<body>

<%- include('../partials/navbar') %>
 <%- include('../partials/flash_notifications') %>                              
    <div class="container top-container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome To Yelp Camp</h1>
                <p>view our hand-picked campgrounds from all over the world</p>
                <a class="btn btn-primary" href="/campgrounds/new">Add New Camp Ground</a>
            </div>
        </header>


        <!-- ======= More Services Section ======= -->
        <section class="more-services section-bg">
            <div class="container">
                <div class="row">
                    <% campgrounds.forEach(function(campground){ %>
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-5 mb-lg-0">
                            <div class="card">
                                <img src=" <%= campground.image %> " class="card-img-top" alt="Cannot Load Page">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="">
                                            <%= campground.name %>
                                        </a></h5>
                                    <p class="card-text text-center">
                                       <%= campground.description.substring(0, 100) + '....' %>
                                   
                                    </p>
                                 
                                </div>
                                <div class="fixed-to-bottom">
                                    <a class="btn" href="/campgrounds/<%= campground._id %>">More Info</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>
        <!-- End More Services Section -->
    </div>

<!-- Bootstrap core JS-->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Third party plugin JS-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<!-- Core theme JS-->
<script src="/script/index.js"></script>
</body>

</html>